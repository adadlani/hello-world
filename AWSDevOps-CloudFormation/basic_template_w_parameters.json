{
"AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Single instance with a few parameters",
    "Metadata": {

    },
    "Parameters": {
        "KeyName": {
            "Description": "Name of an existing EC2 KeyPair to enable SSH access to the instance",
            "Type": "AWS::EC2::KeyPair::KeyName",
            "ConstraintDescription": "Must be the name of an existing EC2 keyPair"
        },
        "InstanceType": {
            "Description": "WebServer EC2 instance type",
            "Type": "String",
            "Default": "t2.micro",
            "AllowedValues": [
                "t1.micro",
                "t2.nano",
                "t2.micro",
                "t2.small",
                "t2.medium",
                "t2.large"
            ],
            "ConstraintDescription": "Must be a valid EC2 instance type"
        },
        "SSHLocation": {
            "Description": "The IP address range can be used to SSH to the EC2 instances",
            "Type": "String",
            "MinLength": "9",
            "MaxLength": "18",
            "Default": "0.0.0.0/0"
        }
    },
    "Mappings": {

    },
    "Conditions": {

    },
    "Resources": {
        "Web1": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": "ami-a4c7edb2",
                "InstanceType": { "Ref": "InstanceType"},
                "SecurityGroups": [
                    { "Ref": "WebSecurityGroup"}
                ],
                "KeyName": { "Ref": "KeyName"},
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "Web1"
                    }
                ]
            }
        },
        "WebSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties":{
                "GroupDescription": "Enable HTTP and SSH access",
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "80",
                        "ToPort": "80",
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "22",
                        "ToPort": "22",
                        "CidrIp": { "Ref": "SSHLocation"}
                    }
                ]
            }
        }
    },
    "Outputs": {
        "WebSiteURL": {
            "Description": "URL for newly created instance",
            "Value": {
                "Fn::Join": [
                    "",
                    [
                        "http://",
                        {
                            "Fn::GetAtt": [
                                "Web1",
                                "PublicDnsName"
                            ]
                        }
                    ]
                ]
            }
        }

    }
}